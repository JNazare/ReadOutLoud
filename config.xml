<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.l0e.readoutloud" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Read Out Loud</name>
  <description>
        Learn English while reading with your kids
  </description>
  <author email="juliana@media.mit.edu" href="http://learn.media.mit.edu">
      Juliana Nazar√©
  </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <platform name="ios">
      <!-- iOS 7.0+ -->
      <!-- iPhone / iPod Touch -->
      <icon src="icons/ios/icon_120.png" width="60" height="60" />
      <icon src="icons/ios/icon_120.png" width="120" height="120" />

      <!-- iPad -->
      <icon src="icons/ios/icon_76.png" width="76" height="76" />
      <icon src="icons/ios/icon_152.png" width="152" height="152" />

      <!-- iOS 6.1 -->
      <!-- Spotlight Icon -->
      <icon src="icons/ios/icon_120.png" width="40" height="40" />
      <icon src="icons/ios/icon_120.png" width="80" height="80" />

      <!-- iPhone / iPod Touch -->
      <icon src="icons/ios/icon_57.png" width="57" height="57" />
      <icon src="icons/ios/icon_57.png" width="114" height="114" />

      <!-- iPad -->
      <icon src="icons/ios/icon_72.png" width="72" height="72" />
      <icon src="icons/ios/icon_72.png" width="144" height="144" />

      <!-- iPhone Spotlight and Settings Icon -->
      <icon src="icons/ios/icon_120.png" width="29" height="29" />
      <icon src="icons/ios/icon_120.png" width="58" height="58" />

      <!-- iPad Spotlight and Settings Icon -->
      <icon src="icons/ios/icon_120.png" width="50" height="50" />
      <icon src="icons/ios/icon_120.png" width="100" height="100" />

      <icon src="icons/ios/icon_180.png" width="180" height="180" />
  </platform>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
</widget>